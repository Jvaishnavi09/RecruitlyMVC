<div
  class="container-fluid d-flex justify-content-center align-items-center align-items-stretch flex-wrap gap-3 mt-4"
>
  <% if(job!==null){ %>
  <div class="card" style="width: 20rem">
    <div class="card-body d-flex gap-2 flex-column">
      <h5 class="card-title"><%= job.jobdesignation %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary">
        <%= job.companyname %>
      </h6>
      <p class="card-text">
        <img src="/placeholder.png" alt="location" class="card-symbols" />
        <%= job.joblocation %>
      </p>
      <p class="card-text">
        <img src="/rupee.png" class="card-symbols" alt="ruppee" /> <%=
        job.salary %>
      </p>
      <p class="card-text">
        <img src="/hourglass.png" class="card-symbols" alt="time" />
        Apply By : <%= job.applyby %>
      </p>
      <div>
        <span class="card-text">
          <img src="/skill.png" class="card-symbols" alt="skill" />
          Skills Required:
        </span>
        <ul class="list-badge" type="none">
          <% if (job.skillsrequired.length > 0) { %> <%
          job.skillsrequired.forEach(skill => { %>
          <li class="list-inline-item skills">&nbsp;<%= skill %>&nbsp;</li>
          <% }); %> <% } else { %>
          <li>No specific skills required</li>
          <% } %>
        </ul>
      </div>

      <p class="card-text">
        <img src="/bar-chart.png" class="card-symbols" alt="number" /> Number Of
        Opennings : <%= job.numberofopenings %>
      </p>
      <div class="text-body-secondary w-100" style="height: 20px">
        Job posted on : <%= job.jobposted %>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <% if(submit===true) { %>
        <button onclick="applyForJob('<%= job.id %>')" class="btn btn-primary">
          Apply
        </button>
        <% } else if(submit===false){%>
        <div class="d-flex gap-1">
          <button
            onclick="EditTheJob('<%= job.id %>')"
            class="btn btn-primary btn-sm"
          >
            EDIT
          </button>
          <button
            onclick="DeleteTheJob('<%= job.id %>')"
            class="btn btn-primary"
          >
            DELETE
          </button>
          <button
            onclick="fetchApplicants('<%= job.id %>')"
            class="btn btn-primary"
          >
            Click to veiw applicants
          </button>
        </div>

        <%}%>
      </div>
    </div>
  </div>

  <%}%>
</div>
